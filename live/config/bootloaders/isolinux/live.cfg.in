label live-@FLAVOUR@
	menu label ^Live (@FLAVOUR@)
	menu default
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE@

label live-@FLAVOUR@-ja-jp
	menu label ^Live (@FLAVOUR@ Japanese Language/Keyboard)
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE@ live-config.locales=ja_JP.UTF-8 live-config.keyboard-layouts=jp

label live-@FLAVOUR@-ja-us
	menu label ^Live (@FLAVOUR@ Japanese Language/US Keyboard)
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE@ live-config.locales=ja_JP.UTF-8

label live-@FLAVOUR@-failsafe
	menu label ^Live (@FLAVOUR@ failsafe)
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE_FAILSAFE@
